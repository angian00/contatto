<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_blue"
    tools:context=".ui.chat.ChatFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:textColor="@color/off_white"
            android:textSize="48sp"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:contentDescription="@string/my_photo"
            android:padding="10dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+39-011-22233344"
            android:drawableLeft="@drawable/icon_phone"
            android:drawablePadding="5dp"
            android:textColor="@color/off_white"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="email@google.com"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="5dp"
            android:textColor="@color/off_white"
            android:textSize="20sp"
            />

        <Space
            android:layout_width="1dp"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="I am a man"
            android:textColor="@color/off_white"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="I am looking for men, women"
            android:textColor="@color/off_white"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="I was born on 27/01/1991"
            android:textColor="@color/off_white"
            android:textSize="24sp"
            />

        <Space
            android:layout_width="1dp"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Description long long long long long long long long long long long long long long long long long"
            android:textColor="@color/off_white"
            android:textSize="32sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/button_unregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/unregister"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>